<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:text="An email will be sent to your email account with your pass word information"
        android:id="@+id/forgot_pw_text"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:textAlignment="center" />

    <EditText
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/forgot_email_text"
        android:layout_gravity="center_horizontal"
        android:text="email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Password"
        android:id="@+id/send_pw"
        android:layout_gravity="center" />

    <Button
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/forgot_cancel"
        android:layout_gravity="center_horizontal" />

</LinearLayout>