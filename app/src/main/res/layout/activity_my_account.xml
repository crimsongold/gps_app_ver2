<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="tcss450.gps_app_phase_i.MyAccountActivity">

    <TextView
        android:id="@+id/acct_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="My Account"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="36sp"/>

    <Button
        android:id="@+id/view_data_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Tracking Data"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/start_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/acct_text"
        android:layout_marginTop="36dp"
        android:text="Start Date:"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/end_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/enter_start_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/enter_start_date"
        android:hint="Enter date"
        android:layout_alignTop="@+id/start_date_text"
        android:layout_alignRight="@+id/acct_text"
        android:layout_alignEnd="@+id/acct_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/enter_start_time"
        android:hint="Enter time"
        android:layout_below="@+id/enter_start_date"
        android:layout_alignRight="@+id/acct_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/enter_end_date"
        android:layout_alignTop="@+id/end_date_text"
        android:layout_alignLeft="@+id/enter_start_time"
        android:layout_alignStart="@+id/enter_start_time"
        android:hint="Enter date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/enter_end_time"
        android:layout_below="@+id/enter_end_date"
        android:layout_alignLeft="@+id/enter_end_date"
        android:layout_alignStart="@+id/enter_end_date"
        android:hint="Enter time" />

</RelativeLayout>
